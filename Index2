                'Sales & CX': { labels: ['Average Order Value (AOV) / Basket Size', 'Repeat Purchase Rate', 'Customer Lifetime Value (CLTV)', 'Clienteling/Personal Service Engagement', 'Product Trial/Sampling Conversion'], values: [88, 85, 90, 95, 70] },

                'Brand Health (Qualitative)': { labels: ['Brand Desirability / Taste Satisfaction', 'Media Mentions & Sentiment', 'Net Promoter Score (NPS)', 'Brand Recall / Awareness'], values: [95, 92, 88, 85] }

            };

 

            const navButtons = document.querySelectorAll('.nav-btn');

            const moduleContents = document.querySelectorAll('.module-content');

           

            function switchModule(targetId) {

                navButtons.forEach(btn => {

                    btn.classList.remove('nav-active');

                    btn.classList.add('nav-inactive');

                });

                document.getElementById(`nav-${targetId}`).classList.add('nav-active');

                document.getElementById(`nav-${targetId}`).classList.remove('nav-inactive');

               

                moduleContents.forEach(content => {

                    if (content.id === `module-${targetId}`) {

                        content.classList.remove('hidden');

                    } else {

                        content.classList.add('hidden');

                    }

                });

            }

 

            navButtons.forEach(btn => {

                btn.addEventListener('click', () => {

                    const targetId = btn.id.split('-')[1];

                    switchModule(targetId);

                });

            });

 

            function createTopicCard(topic) {

                const card = document.createElement('div');

                card.className = 'bg-white rounded-xl shadow-lg transition-shadow duration-300 hover:shadow-xl overflow-hidden';

               

                const header = document.createElement('button');

                header.className = 'w-full text-left p-4 md:p-5 flex justify-between items-center bg-[#84a98c] text-white';

                header.innerHTML = `<h3 class="text-lg md:text-xl font-semibold">${topic.title}</h3><span class="transform transition-transform duration-300 text-2xl font-light">+</span>`;

 

                const details = document.createElement('div');

                details.className = 'topic-card-details';

                const contentWrapper = document.createElement('div');

                contentWrapper.className = 'p-4 md:p-5 text-gray-700 prose max-w-none';

                contentWrapper.innerHTML = topic.content;

                details.appendChild(contentWrapper);

 

                card.appendChild(header);

                card.appendChild(details);

 

                header.addEventListener('click', () => {

                    const icon = header.querySelector('span');

                    if (details.style.maxHeight) {

                        details.style.maxHeight = null;

                        icon.style.transform = 'rotate(0deg)';

                    } else {

                        details.style.maxHeight = details.scrollHeight + "px";

                        icon.style.transform = 'rotate(45deg)';

                        if (topic.title.includes('KPIs')) {

                            initKpiChart();

                        }

                    }

                });

 

                return card;

            }

 

            const strategyContainer = document.getElementById('strategy-topics');

            courseData.strategy.topics.forEach(topic => {

                strategyContainer.appendChild(createTopicCard(topic));

            });

 

            const implementationContainer = document.getElementById('implementation-topics');

            courseData.implementation.topics.forEach(topic => {

                implementationContainer.appendChild(createTopicCard(topic));

            });

 

            const evaluationContainer = document.getElementById('evaluation-topics');

            courseData.evaluation.topics.forEach(topic => {

                evaluationContainer.appendChild(createTopicCard(topic));

            });

 

            let kpiChartInstance = null;

            function initKpiChart() {

                if (kpiChartInstance) return;

 

                const filterContainer = document.getElementById('kpi-filters');

                Object.keys(kpiData).forEach(key => {

                    const button = document.createElement('button');

                    button.textContent = key;

                    button.className = 'kpi-filter-btn py-1 px-3 rounded-full text-sm font-medium transition-colors duration-200';

                    if (key === 'All') {

                        button.classList.add('bg-[#354f52]', 'text-white');

                    } else {

                        button.classList.add('bg-gray-200', 'text-gray-700');

                    }

                    button.dataset.filter = key;

                    filterContainer.appendChild(button);

                });

 

                const ctx = document.getElementById('kpiChart').getContext('2d');

                kpiChartInstance = new Chart(ctx, {

                    type: 'bar',

                    data: {

                        labels: kpiData.All.labels,

                        datasets: [{

                            label: 'Relevance/Importance (Score out of 100)',

                            data: kpiData.All.values,

                            backgroundColor: '#52796f',

                            borderColor: '#354f52',

                            borderWidth: 1

                        }]

                    },

                    options: {

                        responsive: true,

                        maintainAspectRatio: false,

                        indexAxis: 'y',

                        scales: {

                            x: {

                                beginAtZero: true,

                                max: 100

                            }

                        },

                        plugins: {

                            legend: {

                                display: false

                            },

                            tooltip: {

                                callbacks: {

                                    label: function(context) {

                                        let label = context.dataset.label || '';

                                        if (label) {

                                            label += ': ';

                                        }

                                        label += Math.round(context.raw * 10) / 10;

                                        return label;

                                    },

                                    title: function(context) {

                                        const label = context[0].label;

                                        if (label.length > 16) {

                                            let words = label.split(' ');

                                            let line1 = [];

                                            let line2 = [];

                                            let currentLineLength = 0;

                                            for (let i = 0; i < words.length; i++) {

                                                if (currentLineLength + words[i].length + (line1.length > 0 ? 1 : 0) <= 16) {

                                                    line1.push(words[i]);

                                                    currentLineLength += words[i].length + (line1.length > 1 ? 1 : 0);

                                                } else {

                                                    line2.push(words[i]);

                                                }

                                            }

                                            return [line1.join(' '), line2.join(' ')];

                                        }

                                        return label;

                                    }

                                }

                            }

                        }

                    }

                });

 

                document.querySelectorAll('.kpi-filter-btn').forEach(btn => {

                    btn.addEventListener('click', (e) => {

                        const filter = e.target.dataset.filter;

                        updateKpiChart(filter);

 

                        document.querySelectorAll('.kpi-filter-btn').forEach(b => {

                            b.classList.remove('bg-[#354f52]', 'text-white');

                            b.classList.add('bg-gray-200', 'text-gray-700');

                        });

                        e.target.classList.add('bg-[#354f52]', 'text-white');

                        e.target.classList.remove('bg-gray-200', 'text-gray-700');

                    });

                });

            }

 

            function updateKpiChart(filter) {

                if (!kpiChartInstance) return;

                const newData = kpiData[filter];

                kpiChartInstance.data.labels = newData.labels;

                kpiChartInstance.data.datasets[0].data = newData.values;

                kpiChartInstance.update();

            }

 

            // --- LLM Integration Functions ---

 

            const API_KEY = ""; // Will be provided by the runtime environment

 

            async function callGeminiAPI(prompt, outputElement, spinnerElement) {

                outputElement.classList.add('hidden'); // Hide previous output

                outputElement.textContent = ''; // Clear previous output

                spinnerElement.classList.remove('hidden'); // Show spinner

 

                let chatHistory = [];

                chatHistory.push({ role: "user", parts: [{ text: prompt }] });

 

                const payload = { contents: chatHistory };

                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${API_KEY}`;

 

                try {

                    const response = await fetch(apiUrl, {

                        method: 'POST',

                        headers: { 'Content-Type': 'application/json' },

                        body: JSON.stringify(payload)

                    });

                    const result = await response.json();

 

                    if (result.candidates && result.candidates.length > 0 &&

                        result.candidates[0].content && result.candidates[0].content.parts &&

                        result.candidates[0].content.parts.length > 0) {

                        const text = result.candidates[0].content.parts[0].text;

                        outputElement.textContent = text;

                        outputElement.classList.remove('hidden');

                    } else {

                        outputElement.textContent = 'Error: Could not get a response from the AI. Please try again.';

                        outputElement.classList.remove('hidden');

                        console.error('Gemini API response structure unexpected:', result);

                    }

                } catch (error) {

                    outputElement.textContent = `Error: Failed to connect to the AI. Check your network or try again later. (${error.message})`;

                    outputElement.classList.remove('hidden');

                    console.error('Error calling Gemini API:', error);

                } finally {

                    spinnerElement.classList.add('hidden'); // Hide spinner

                }

            }

 

            document.getElementById('generatePlanBtn').addEventListener('click', () => {

                const industry = document.getElementById('industryInput').value.trim();

                const product = document.getElementById('productServiceInput').value.trim();

                const planOutput = document.getElementById('planOutput');

                const planSpinner = document.getElementById('planSpinner');

 

                if (!industry || !product) {

                    planOutput.textContent = "Please enter both an industry and a product/service to generate a plan.";

                    planOutput.classList.remove('hidden');

                    return;

                }

 

                const prompt = `Generate a high-level marketing plan outline for a brand in the "${industry}" industry selling "${product}". The plan should cover key components like target audience, key marketing channels, and core messaging. Make it concise and actionable, presented as a bulleted list.`;

                callGeminiAPI(prompt, planOutput, planSpinner);

            });

 

            document.getElementById('explainConceptBtn').addEventListener('click', () => {

                const concept = document.getElementById('conceptInput').value.trim();

                const conceptOutput = document.getElementById('conceptOutput');

                const conceptSpinner = document.getElementById('conceptSpinner');

 

                if (!concept) {

                    conceptOutput.textContent = "Please enter a marketing concept to explain.";

                    conceptOutput.classList.remove('hidden');

                    return;

                }

 

                const prompt = `Explain the marketing concept "${concept}" in a concise and easy-to-understand manner, suitable for someone learning digital marketing fundamentals. Provide a definition and a brief example if applicable.`;

                callGeminiAPI(prompt, conceptOutput, conceptSpinner);

            });

 

 

            // --- Exam Section Logic ---

            document.getElementById('digitalMarketingExamForm').addEventListener('submit', function(event) {

                event.preventDefault(); // Prevent actual form submission

 

                // You could add client-side validation or simple feedback here if desired.

                // For example, iterate through questions and check selected answers against known correct answers.

                alert('Exam submitted for review! (Note: This is a client-side only exam, results are not stored or automatically graded. You would need a backend for this.)');

            });

 

 

            // Initial module load

            switchModule('strategy');

        });

    </script>

