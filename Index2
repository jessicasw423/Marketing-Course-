            const kpiData = {

                'All': { labels: ['Brand Desirability / Taste Satisfaction', 'Customer Lifetime Value', 'Online Engagement', 'Conversion Rate (Online)', 'ROAS (Digital)', 'Media Mentions / Product Reviews', 'Website Traffic', 'Average Order Value / Basket Size'], values: [95, 90, 85, 70, 80, 75, 78, 88] },

                'Website & Digital': { labels: ['Website Traffic', 'Bounce Rate', 'Conversion Rate (Online)', 'Time on Product/Recipe Page'], values: [78, 60, 70, 82] },

